@model MoviesApp.Models.Movie

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this Movie?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="text-align:left;">
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <br />
        <dt style="text-align:left;">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        <br />
        <dt style="text-align:left;">
            @Html.DisplayNameFor(model => model.Plot)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Plot)
        </dd>
        <br />
        <dt style="text-align:left;">
            
            @Html.DisplayNameFor(model => model.PosterImage)
        </dt>

        <dd>
            @if (Model.PosterImage != null)
            {
                <img src="@Url.Content(Model.PosterImage)" alt="Image" style="height: 200px;width: 150px;" />
            }
            else
            {
                <p>No Image Found</p>
            }
        </dd>
        <br />

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
