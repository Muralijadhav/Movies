@model IEnumerable<MoviesApp.Models.Movie>

@{
    ViewBag.Title = "Index";
    var noactors = "No Cast Added";
}

<h2>Movies List</h2>

<h3 style="text-align:right;margin-bottom:40px;">
    @Html.ActionLink("ADD NEW MOVIE", "Create")
</h3>
<table class="table">
    <tr>
        <th style="width:10%">
            @Html.DisplayNameFor(model => model.PosterImage)
        </th>
        <th style="width:10%">
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th style="width:10%">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </th>
        <th style="width:30%">
            @Html.DisplayNameFor(model => model.Plot)
        </th>

        <th style="width:20%">
            Cast
        </th>

        <th style="width:20%">
            Edit
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.PosterImage != null)
                {
                    <img src="@Url.Content(item.PosterImage)" alt="Image" style="height: 200px;width: 150px;" />
                }
                else
                {
                    <p>No Image Found</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfRelease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plot)
            </td>
            <td>
                
                @if (item.Actors.Count > 0)
                {
                    foreach (var actor in item.Actors)
                    {
                        @Html.DisplayFor(modelItem => actor.ActorName) <div>&nbsp;</div>
                    }
                }
                else
                {
                    @noactors;
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MovieId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MovieId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MovieId })
            </td>
        </tr>
    }

</table>
